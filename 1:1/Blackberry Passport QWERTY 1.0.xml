<?xml version="1.0" encoding="utf-8"?>
<!-- 1:1 layout of Blackberry Passport, a 2014 smartphone with a physical keyboard.

A 1:1 layout means a layout inspired by an existing keyboard layout with accommodation for all additional symbols from Custom layout.

More at https://github.com/miscounted/even-more-layouts-for-Unexpected-Keyboard/
-->
<keyboard bottom_row="false"  name="Blackberry Passport QWERTY (US) 1.0" script="latin">
  <row>
    <key key0="q" key2="1" key4="loc esc"/>
    <key key0="w" key1="~" key2="2" key3="\@"/>
    <key key0="e" key1="!" key2="3" key3="\#" key4="loc €"/>
    <key key0="r" key2="4" key3="$"/>
    <key key0="t" key2="5" key3="%"/>
    <key key0="y" key2="6" key3="^"/>
    <key key0="u" key2="7" key3="&amp;"/>
    <key key0="i" key2="8" key3="*"/>
    <key key0="o" key2="9" key3="(" key4=")"/>
    <key key0="p" key2="0"/>
  </row>
  <row>
    <key key0="a" key1="loc tab" key2="`" key7="shift" key6="loc capslock"/>
    <key key0="s" key2="loc §" key3="loc ß"/>
    <key key0="d"/>
    <key key0="f"/>
    <key key0="g" key2="-" key3="_"/>
    <key key0="h" key2="=" key3="+"/>
    <key key0="j" key4="}" key3="{"/>
    <key key0="k" key3="[" key4="]"/>
    <key key0="l" key2="|" key3="\\"/>
    <key key0="backspace" key2="delete"/>
  </row>
  <row>
    <key key0="z" key7="ctrl" key1="loc switch_greekmath" key2="loc meta" key3="loc switch_clipboard" key4="switch_numeric"/>
    <key key0="x" key7="fn" key1="loc alt" key2="loc change_method" key3="switch_emoji" key4="config" key6="loc †"/>
    <key key0="c" key2="&lt;" key3="."/>
    <key key0="v" key2="&gt;" key3=","/>
    <key width="2" key0="space" key7="switch_forward" key8="switch_backward" key5="cursor_left" key6="cursor_right" slider="true"/>
    <key key0="b" key2="\?" key3="/"/>
    <key key0="n" key2=":" key3=";" key1="loc compose" key7="up" key6="right" key5="left" key8="down"/>
    <key key0="m" key2="&quot;" key3="'" key5="loc home" key7="loc page_up" key6="loc end" key8="loc page_down"/>
    <key key0="enter" key1="loc voice_typing" key2="action"/>
  </row>
</keyboard>
